<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.com.pos.db.SaleDetailHbm" table="sale_detail">

        <meta attribute="class-description">This class contains sail detail.</meta>

        <composite-id name="SaleDetailKey" class="ar.com.pos.db.SaleDetailKeyHbm">
            <key-property name="idsale" column="id_sale" type="long" />
            <key-property name="idproduct" column="id_product" type="string" />
        </composite-id>


        <many-to-one name="sale" class="ar.com.pos.db.SaleHbm" fetch="select" insert="false" update="false">
            <column name="id_sale" not-null="true" />
        </many-to-one>

        <property name="amount" type="integer" column="product_amount" />

    </class>

</hibernate-mapping>
